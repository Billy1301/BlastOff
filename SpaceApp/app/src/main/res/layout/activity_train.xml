<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".TrainActivity">

    <TextView
        android:id="@+id/train_blurb_textView_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Training Time!"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/colorPrimary"
        android:layout_margin="8dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/training_text"
        android:gravity="center"
        android:layout_margin="5dp"/>

    <Button
        android:id="@+id/train_activity1_button_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crew Assembly"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/train_activity2_button_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Base Station Walk Back"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/train_activity3_button_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mission Control!"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_gravity="center_horizontal">

        <CheckBox
            android:id="@+id/train_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Astronaut Training Complete!" />
    </LinearLayout>

</LinearLayout>
