<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.billy.spaceapp.SelectActivity"
    android:layout_gravity="center"
    android:gravity="center">

    <TextView
        android:id="@+id/select_title_textView_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What do you want to work on, Astronaut?"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:textSize="30dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/spacephoto"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/select_train_button_id"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="train"
            android:background="@drawable/dumbbell48"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/select_learn_button_id"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="learn"
            android:background="@drawable/physics48"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/select_create_button_id"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="create"
            android:background="@drawable/astronaut_48"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/select_communicate_button_id"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="communicate"
            android:background="@drawable/globe_48"
            android:layout_weight="1" />


        <Button
            android:id="@+id/select_incentive_button_id"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="incentive"
            android:background="@drawable/rocket48"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>